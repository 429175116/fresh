<style lang="less">
.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1rpx solid #f3f1f1;
  z-index: 5;
}

.footer .ft_item {
  width: 33.33%;
  height: 100%;
  text-align: center;
  float: left;
}

.text {
  font-size: 24rpx;
  color: #999;
}

.footer .ft_item image {
  height: 50rpx;
  width: 50rpx;
  margin: 10rpx auto 0rpx auto;
  display: block;
}

.title {
  margin-top: -80rpx;
  font-weight: bold;
}

.mod_btn {
  margin: auto;
  border-radius: 50%;
  border: 6rpx solid #fff;
  background: rgba(0, 0, 0, 0);
  width: 130rpx;
  height: 130rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 120rpx;
